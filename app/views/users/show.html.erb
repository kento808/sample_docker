<% provide(:title, @user.username) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user, size: 60 %>
        <%= @user.username %>
      </h1>
      <section class="stats">
      <%= render 'shared/stats' %>
      </section>
      <section>
        <h5>profile</h5>
        <p class= "profile"><%= @user.profile %></p>
      </section>
      <span><%= pluralize(@user.posts.count, "have posts") %></span>
      <% if current_user?(@user) %>
        <%= link_to '投稿する', new_post_path, class: "btn btn-info" %>
      <% end %>
    </section>
  </aside>

  <div class="col-md-8">
    <%= render 'follow_form' %>
    <% if @user.posts.any? %>
      <h3>Microposts (<%= @user.posts.count %>)</h3>
      <%= paginate @posts %>
      <ol class="microposts">
        <%= render @posts %>
      </ol>
      <%= paginate @posts %>
    <% end %>
  </div>
</div>
