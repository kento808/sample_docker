<%= provide(:title, "profile edit") %>
 <h1>profile edit</h1>
<div class ="row">
  <div class ="col-md-6 mx-auto">
    <%= form_for current_user, url: {action: 'profile_update'} do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true %>
    </div>

    <div class ="field">
      <%= f.label :profile, "自己紹介" %>
      <%= f.text_field :profile, autofocus: true %>
    </div>

    <div class="field">
        <%= f.label :email, "メールアドレス" %><i>(これより以下は非公開情報となります)</i>
        <%= f.email_field :email, autofocus: true %>
    </div>

    <div class ="select">
      <%= f.label :sex, "性別" %>
      <%= f.select :sex, [["man", "man"], ["woman", "woman"]], include_blank: "plese select" %>
    </div>

    <%= f.submit "Update" , class: "btn btn-primary"%>
    <% end %>

    <%= link_to "password edit?", edit_user_registration_path %>

    <h4>Cancel my account</h4>

     <%= button_to "Cancel my account",  registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
  </div>
</div>
