<%= provide(:title, 'sign up') %>
<h1>sign up!</h1>
<div class ="row">
  <div class ="col-md-6 col-md-offset-3">
  <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
   <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :profile, "自己紹介" %>
      <%= f.text_area :profile, autofocus: true, value: "Hello world!" %>

    <div class ="select">
      <%= f.label :sex, "性別" %>
      <%= f.select :sex, [["man", "man"], ["woman", "woman"]], include_blank: "plese select" %>
    </div>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
      <%= render "devise/shared/links" %>
  <% end %>
  </div>
</div>
