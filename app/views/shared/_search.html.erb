<div class ="search">
  <p>ユーザーまたは投稿を探す</p>
  <%= form_tag(search_path, :method => 'get') do %>
    <%= select_tag(:option, options_for_select([["user", "1"],["post","2"]]), id: "select")%>
    <%= text_field_tag :search %>
    <%= submit_tag 'Search', class: "btn btn-primary" %>
  <% end %>
</div>
