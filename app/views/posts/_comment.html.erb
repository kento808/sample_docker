<% if post.comments.any? %>
  <% post.comments.each do |comment| %>
    <div class="mb-2">
      <% if comment.user == current_user %>
        <%= link_to "delete?", post_comment_path(post.id, comment), method: :delete, remote: true, class: "delete-comment" %>
      <% end %>
      <span>
        <strong>
          <%= link_to comment.user.username, user_path(comment.user), class: "comment-user" %>
        </strong>
      </span>
      <span><%= comment.comment %></span>
      <div class ="time"><i><%= time_ago_in_words(comment.created_at)%></i> ago</div>
    </div>
  <% end %>
<% else %>
  <p>コメントはまだありません</p>
<% end %>
